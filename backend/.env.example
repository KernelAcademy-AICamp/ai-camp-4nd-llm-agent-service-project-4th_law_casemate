# === JWT 인증 ===
# openssl rand -hex 32 로 생성한 랜덤 문자열 사용 (필수)
JWT_SECRET_KEY=your-random-secret-key-here

# 토큰 만료 시간 (시간 단위, 기본값: 24)
# ACCESS_TOKEN_EXPIRE_HOURS=24

# === 데이터베이스 ===
DATABASE_URL=postgresql://user:password@host:port/dbname

# === Supabase (파일 저장소) ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# === OpenAI ===
OPENAI_API_KEY=sk-your-openai-key

# === 법령 API ===
LAW_API_KEY=your-law-api-key

# === 배포 설정 ===
# CORS 허용 오리진 (쉼표 구분, 기본값: http://localhost:3000)
# ALLOWED_ORIGINS=https://your-domain.com

# 디버그 모드 (true: Swagger 문서 활성화, 에러 상세 표시)
# DEBUG=false

# DB 초기화 엔드포인트 활성화 (프로덕션에서는 반드시 false)
# ENABLE_DB_INIT=false

# 리랭킹 활성화 (sentence-transformers 필요, 프로덕션에서는 false 권장)
# USE_RERANKING=false

# Qdrant 벡터 DB
# QDRANT_HOST=localhost
# QDRANT_PORT=6333
